# ============================================================
# TenderManager AI — Environment Variables
# Copy this file to .env and fill in the actual values.
# NEVER commit the .env file to version control.
# ============================================================

# ----------------------------------------------------------
# Supabase — Database and Authentication
# ----------------------------------------------------------

# Public Supabase project URL (safe to expose to the client)
PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Public anonymous key (safe to expose, enforces RLS policies)
PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Service role key (server-side only, bypasses RLS — keep secret)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Direct PostgreSQL connection string (used for migrations only)
DATABASE_URL=postgresql://postgres:postgres@localhost:54322/postgres

# ----------------------------------------------------------
# OpenAI API — AI Text Generation
# ----------------------------------------------------------

# API key for OpenAI (server-side only — keep secret)
OPENAI_API_KEY=sk-your-openai-key

# OpenAI model identifier (e.g. gpt-4o, gpt-4o-mini)
OPENAI_MODEL=gpt-4o

# Maximum tokens for OpenAI API responses
OPENAI_MAX_TOKENS=4096

# ----------------------------------------------------------
# Embedding API — Voyage AI for Vector Embeddings
# ----------------------------------------------------------

# API key for Voyage AI embeddings (server-side only — keep secret)
EMBEDDING_API_KEY=your-voyage-api-key

# Embedding API endpoint URL
EMBEDDING_API_ENDPOINT=https://api.voyageai.com/v1/embeddings

# Embedding model identifier
EMBEDDING_MODEL=voyage-3

# ----------------------------------------------------------
# Application Configuration
# ----------------------------------------------------------

# Public application name (displayed in the UI)
PUBLIC_APP_NAME=TendermanagerAI

# Public application URL (used for links, redirects, magic links)
PUBLIC_APP_URL=http://localhost:5173

# Node.js environment (development | production | test)
NODE_ENV=development

# Server port (used by adapter-node in production)
PORT=3000

# Server host binding (0.0.0.0 for Docker, 127.0.0.1 for local)
HOST=0.0.0.0

# ----------------------------------------------------------
# Logging
# ----------------------------------------------------------

# Log level (debug | info | warn | error)
# Controls the structured logger in src/lib/server/logger.ts
LOG_LEVEL=debug

# ----------------------------------------------------------
# Docker / PostgreSQL (used by docker-compose for local DB)
# ----------------------------------------------------------

# Password for the local Supabase PostgreSQL instance
POSTGRES_PASSWORD=postgres
